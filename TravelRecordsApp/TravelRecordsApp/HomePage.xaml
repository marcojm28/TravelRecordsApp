<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TravelRecordsApp"
             x:Class="TravelRecordsApp.HomePage"
            BarBackgroundColor="{StaticResource colorBackgroundGeneral}">

    <TabbedPage.ToolbarItems>
        <ToolbarItem Text="Añadir Actividades"
                     x:Name="toolbarHome"
                     Clicked="ToolbarHome_Clicked"
                     /> 
    </TabbedPage.ToolbarItems>
    <local:HistoryPage Title="Actividades"/>
    <local:MapPage Title="Ubicación"/>
    <local:CustomersPage Title="Clientes"/> 

</TabbedPage>