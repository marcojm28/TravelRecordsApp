<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TravelRecordsApp"
             xmlns:views="clr-namespace:TravelRecordsApp"
             xmlns:forms="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
             x:Class="TravelRecordsApp.MainPage"
             Title="Supervisión Vendedor">

    <ScrollView>
        <StackLayout Padding="15" VerticalOptions="Center">
            <!-- Place new controls here -->
            <Image x:Name="imageLogin" 
               WidthRequest="100"
               Source="geo"/>


            <Entry x:Name="entryUser" 
               Placeholder="Dirección de correo"
               Keyboard="Email"
               Text="marcojm28@gmail.com"/>
            <Entry x:Name="entryPassword"
               Placeholder="Contraseña"
               IsPassword="True"
                   Text="4223602"/>
        <StackLayout Orientation="Horizontal">
            <Label VerticalOptions="Center" FontAttributes="Bold" Text="Recordar Usuario en dispositivo" HorizontalOptions="StartAndExpand"/>
            <Switch x:Name="switchRememberUser" VerticalOptions="Center" IsToggled="false"/>
        </StackLayout>
        <Button x:Name="buttonLogin"
                Text="Ingresar"
                Clicked="ButtonLogin_Clicked"
                Margin="0,15,0,0"/>
            <Button x:Name="buttonAddNewUser"
                    Text="Registrarse"
                    Clicked="ButtonAddNewUser_Clicked"
                    BackgroundColor="#42b72a"
                    Margin="0,10,0,0"/>

            <DatePicker></DatePicker>

            <!--<FlexLayout>
                <Label Text="¿No tienes una cuenta? "/>
